{
  "info": {
    "name": "HR System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Complete API collection for the HR System. Run Login first — it auto-sets {{token}}."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8081", "type": "string" },
    { "key": "token",   "value": "",                      "type": "string" }
  ],
  "item": [

    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
          }
        }
      ]
    },

    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [{ "listen": "test", "script": { "type": "text/javascript", "exec": [
            "var json = pm.response.json();",
            "if (json.token) { pm.collectionVariables.set('token', json.token); }"
          ]}}],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/login", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","login"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@hr-system.com\",\n  \"password\": \"Admin@123\"\n}" }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/me", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","me"] }
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type",  "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/register", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","register"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"jane.doe@hr-system.com\",\n  \"password\": \"Password@123\",\n  \"role_id\": \"<role-uuid>\"\n}" },
            "description": "Requires SuperAdmin or HRManager role."
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/logout", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","logout"] }
          }
        }
      ]
    },

    {
      "name": "Departments",
      "item": [
        {
          "name": "Get Department Tree",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/hr/departments/tree", "host": ["{{baseUrl}}"], "path": ["api","v1","hr","departments","tree"] }
          }
        },
        {
          "name": "List Departments",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/v1/hr/departments",
              "host": ["{{baseUrl}}"], "path": ["api","v1","hr","departments"],
              "query": [
                { "key": "page",      "value": "1" },
                { "key": "page_size", "value": "20" },
                { "key": "search",    "value": "", "disabled": true },
                { "key": "is_active", "value": "true", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Create Department",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/hr/departments", "host": ["{{baseUrl}}"], "path": ["api","v1","hr","departments"] },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Engineering\",\n  \"code\": \"ENG\",\n  \"description\": \"Software Engineering department\",\n  \"parent_department_id\": null,\n  \"manager_id\": null\n}" },
            "description": "Requires SuperAdmin or HRManager role."
          }
        },
        {
          "name": "Get Department",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/hr/departments/:id", "host": ["{{baseUrl}}"], "path": ["api","v1","hr","departments",":id"], "variable": [{ "key": "id", "value": "<department-uuid>" }] }
          }
        },
        {
          "name": "Update Department",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/hr/departments/:id", "host": ["{{baseUrl}}"], "path": ["api","v1","hr","departments",":id"], "variable": [{ "key": "id", "value": "<department-uuid>" }] },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Engineering Updated\",\n  \"code\": \"ENG\",\n  \"description\": \"Updated description\",\n  \"parent_department_id\": null,\n  \"manager_id\": null\n}" },
            "description": "Requires SuperAdmin or HRManager role."
          }
        },
        {
          "name": "Delete Department",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/hr/departments/:id", "host": ["{{baseUrl}}"], "path": ["api","v1","hr","departments",":id"], "variable": [{ "key": "id", "value": "<department-uuid>" }] },
            "description": "Requires SuperAdmin role. Soft delete."
          }
        }
      ]
    },

